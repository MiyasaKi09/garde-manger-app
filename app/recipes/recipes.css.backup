}

.ingredients-list-myko {
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
}

.ingredient-item-myko {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.ingredient-item-myko.available {
  border-color: rgba(76, 175, 80, 0.4);
}

.ingredient-item-myko.missing {
