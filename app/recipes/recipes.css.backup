.step-item-myko::before {
  content: counter(step);
  position: absolute;
  top: 1rem;
  left: 1rem;
  background: linear-gradient(135deg, #66bb6a, #43a047);
  color: white;
  border-radius: 50%;
  width: 30px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 0.9rem;
