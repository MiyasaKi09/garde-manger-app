  animation: recommendedPulse 2s ease-in-out infinite;
}

.action-btn.shopping:hover {
  background: rgba(33, 150, 243, 0.2);
  color: #1976d2;
  border-color: rgba(33, 150, 243, 0.4);
}

.action-btn.edit:hover {
  background: rgba(255, 193, 7, 0.2);
  color: #f57c00;
}

.action-btn.delete:hover {
  background: rgba(244, 67, 54, 0.2);
  color: #d32f2f;
}

@keyframes recommendedPulse {
  0%, 100% { 
    background: rgba(102, 187, 106, 0.15);
    box-shadow: 0 2px 8px rgba(102, 187, 106, 0.2);
  }
  50% { 
    background: rgba(102, 187, 106, 0.25);
    box-shadow: 0 4px 12px rgba(102, 187, 106, 0.3);
  }
}

/* Tags */
.recipe-tags {
  display: flex;
  gap: 0.3rem;
  margin-top: 0.5rem;
  flex-wrap: wrap;
}

.tag {
  background: rgba(102, 187, 106, 0.2);
  color: #2e7d32;
  border-radius: 12px;
  padding: 0.2rem 0.6rem;
  font-size: 0.7rem;
  font-weight: 500;
  border: 1px solid rgba(102, 187, 106, 0.3);
}

.tag.more {
  background: rgba(158, 158, 158, 0.2);
  color: rgba(66, 66, 66, 0.8);
  border-color: rgba(158, 158, 158, 0.3);
}

/* ========================================
   √âTATS ET BOUTONS SP√âCIAUX
   ======================================== */

/* √âtat vide */
.empty-state {
  grid-column: 1 / -1;
  text-align: center;
  padding: 4rem 2rem;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.empty-state h2 {
  color: rgba(46, 125, 50, 0.8);
  margin: 0 0 1rem 0;
  font-size: 1.5rem;
}

.empty-state p {
  color: rgba(46, 125, 50, 0.6);
  margin: 0;
}

/* Bouton flottant */
.recipes-fab {
  position: fixed;
  bottom: 2rem;
  right: 2rem;
  width: 60px;
  height: 60px;
  background: linear-gradient(135deg, #66bb6a, #43a047);
  color: white;
  border: none;
  border-radius: 50%;
  font-size: 1.5rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 
    0 6px 20px rgba(102, 187, 106, 0.4),
    0 2px 8px rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.recipes-fab:hover {
  transform: translateY(-3px) scale(1.1);
  box-shadow: 
    0 12px 30px rgba(102, 187, 106, 0.5),
    0 4px 15px rgba(0, 0, 0, 0.15);
}

/* Spinner de chargement */
.loading-spinner {
  text-align: center;
  padding: 4rem 2rem;
  color: rgba(46, 125, 50, 0.8);
  font-size: 1.2rem;
  font-weight: 500;
}

