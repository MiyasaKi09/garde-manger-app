/* ============================================
   MYKO RECIPES - STYLE GLASSMORPHISM
   Compatible avec le design syst√®me Myko
   ============================================ */

.recipes-container {
  min-height: 100vh;
  background: linear-gradient(135deg, rgba(240, 253, 244, 0.8) 0%, rgba(219, 234, 254, 0.8) 100%);
  padding: 20px;
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
}

.loading-spinner {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  font-size: 1.2rem;
  color: #374151;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  margin: 20px auto;
  max-width: 400px;
  padding: 40px;
}

/* ============================================
   CONTROLES ET FILTRES
   ============================================ */

.recipes-controls {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 24px;
  margin-bottom: 24px;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.search-filters {
  display: flex;
  gap: 16px;
  margin-bottom: 20px;
  flex-wrap: wrap;
  align-items: center;
}

.filter-select {
  padding: 12px 16px;
  background: rgba(255, 255, 255, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 12px;
  font-size: 14px;
  color: #374151;
  backdrop-filter: blur(5px);
  cursor: pointer;
  min-width: 180px;
}

.add-recipe-btn {
  padding: 12px 20px;
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
  text-decoration: none;
  border-radius: 12px;
  font-weight: 500;
  font-size: 14px;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
  white-space: nowrap;
}

.add-recipe-btn:hover {
  background: linear-gradient(135deg, #16a34a, #15803d);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(34, 197, 94, 0.3);
}

/* ============================================
   STATISTIQUES ET TRIS
   ============================================ */

.stats-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 16px;
}

.stats-inline {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px 16px;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  min-width: 70px;
  transition: all 0.3s ease;
}

.stat-filter-btn {
  cursor: pointer;
}

.stat-filter-btn:hover, .stat-filter-active {
  background: rgba(34, 197, 94, 0.2);
  border-color: rgba(34, 197, 94, 0.3);
  transform: translateY(-2px);
}

.urgent-recipes {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.1));
  border-color: rgba(239, 68, 68, 0.3);
}

.stat-number {
  font-size: 1.25rem;
  font-weight: bold;
  color: #1f2937;
}

.stat-label {
  font-size: 0.75rem;
  color: #6b7280;
  text-align: center;
}

.sort-controls {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.sort-btn {
  padding: 8px 12px;
  background: rgba(255, 255, 255, 0.3);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 8px;
  font-size: 13px;
  color: #374151;
  cursor: pointer;
  transition: all 0.3s ease;
}

.sort-btn:hover, .sort-btn.active {
  background: rgba(34, 197, 94, 0.2);
  border-color: rgba(34, 197, 94, 0.3);
  color: #16a34a;
}

.filter-count {
  font-size: 14px;
  color: #6b7280;
  background: rgba(255, 255, 255, 0.3);
  padding: 8px 12px;
  border-radius: 8px;
}

/* ============================================
   GRILLE DE RECETTES
   ============================================ */

.recipes-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 20px;
}

.empty-state {
  grid-column: 1 / -1;
  text-align: center;
  padding: 60px 20px;
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.empty-state h2 {
  font-size: 1.5rem;
  color: #374151;
  margin-bottom: 8px;
}

.empty-state p {
  color: #6b7280;
  margin-bottom: 20px;
}

/* ============================================
   CARTES DE RECETTES - GLASSMORPHISM
   ============================================ */
.recipe-card {
  background: rgba(255, 255, 255, 0.25);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  padding: 20px;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.recipe-card:hover {
  background: rgba(255, 255, 255, 0.35);
  transform: translateY(-4px);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  border-color: rgba(34, 197, 94, 0.3);
}

.myko-recommended {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(22, 163, 74, 0.1));
  border: 2px solid rgba(34, 197, 94, 0.3);
}

.myko-recommended::before {
  content: "üåø MYKO";
  position: absolute;
  top: 8px;
  right: 8px;
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
  padding: 4px 8px;
  border-radius: 6px;
  font-size: 10px;
  font-weight: bold;
}

.urgent-recipe {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.1), rgba(220, 38, 38, 0.1));
  border: 2px solid rgba(239, 68, 68, 0.4);
  animation: pulse-urgent 2s infinite;
}

@keyframes pulse-urgent {
  0%, 100% { box-shadow: 0 8px 32px rgba(239, 68, 68, 0.2); }
  50% { box-shadow: 0 8px 32px rgba(239, 68, 68, 0.4); }
}

/* ============================================
   CONTENU DES CARTES
   ============================================ */

.recipe-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12px;
}

.recipe-title {
  font-size: 1.1rem;
  font-weight: 600;
  color: #1f2937;
  margin: 0;
  flex: 1;
  margin-right: 8px;
  line-height: 1.3;
}

.recipe-badges {
  display: flex;
  flex-direction: column;
  gap: 4px;
  align-items: flex-end;
}

.myko-score {
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: bold;
  white-space: nowrap;
}

.high-score {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
}

.medium-score {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: white;
}

.low-score {
  background: rgba(107, 114, 128, 0.3);
  color: #374151;
}

.urgent-badge {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: white;
  padding: 3px 6px;
  border-radius: 8px;
  font-size: 10px;
  font-weight: bold;
  animation: pulse 1s infinite;
}

.recipe-description {
  color: #6b7280;
  font-size: 14px;
  line-height: 1.4;
  margin-bottom: 16px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recipe-meta {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16px;
  padding: 12px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 8px;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 13px;
  color: #374151;
}

.meta-icon {
  margin-right: 4px;
}

/* ============================================
   DISPONIBILIT√â ET ACTIONS
   ============================================ */

.recipe-availability {
  margin-bottom: 16px;
}

.availability-bar {
  width: 100%;
  height: 6px;
  background: rgba(107, 114, 128, 0.2);
  border-radius: 3px;
  overflow: hidden;
  margin-bottom: 6px;
}

.availability-fill {
  height: 100%;
  background: linear-gradient(90deg, #ef4444, #f59e0b, #22c55e);
  border-radius: 3px;
  transition: width 0.3s ease;
}

.availability-text {
  font-size: 12px;
  color: #6b7280;
}

.recipe-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  padding: 8px 12px;
  border: none;
  border-radius: 8px;
  font-size: 12px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  text-align: center;
  min-width: 70px;
}

.action-btn.primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: white;
}

.action-btn.primary:hover {
  background: linear-gradient(135deg, #2563eb, #1d4ed8);
  transform: translateY(-1px);
}

.action-btn.secondary {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
}

.action-btn.secondary:hover {
  background: linear-gradient(135deg, #16a34a, #15803d);
  transform: translateY(-1px);
}

.action-btn.tertiary {
  background: rgba(255, 255, 255, 0.4);
  color: #374151;
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.action-btn.tertiary:hover {
  background: rgba(255, 255, 255, 0.6);
  transform: translateY(-1px);
}

/* ============================================
   RESPONSIVE
   ============================================ */

@media (max-width: 768px) {
  .recipes-container {
    padding: 12px;
  }
  
  .recipes-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }
  
  .search-filters {
    flex-direction: column;
    align-items: stretch;
  }
  
  .stats-inline {
    justify-content: center;
  }
  
  .sort-controls {
    justify-content: center;
  }
  
  .recipe-meta {
    flex-direction: column;
    gap: 8px;
  }
  
  .recipe-actions {
    flex-direction: column;
  }
  
  .action-btn {
    flex: none;
  }
}

@media (max-width: 480px) {
  .stats-inline {
    flex-wrap: wrap;
    gap: 8px;
  }
  
  .stat-item {
    min-width: 60px;
    padding: 8px 12px;
  }
  
  .sort-controls {
    flex-wrap: wrap;
  }
}

/* ============================================
   ANIMATIONS
   ============================================ */

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.recipe-card {
  animation: fadeIn 0.5s ease-out;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
}

.badge.difficulty-moyen {
  color: #ff9800;
}

.badge.difficulty-difficile {
  color: #f44336;
}

/* Badges Myko sp√©ciaux */
.badge.myko-recommended {
  background: linear-gradient(135deg, #66bb6a, #43a047);
  color: white;
  border-color: rgba(102, 187, 106, 0.6);
  box-shadow: 0 2px 12px rgba(102, 187, 106, 0.4);
  animation: mykoGlow 2s ease-in-out infinite alternate;
}

.badge.urgent {
  background: linear-gradient(135deg, #ff5722, #f44336);
  color: white;
  border-color: rgba(244, 67, 54, 0.6);
  box-shadow: 0 2px 12px rgba(244, 67, 54, 0.4);
  animation: urgentPulse 1.5s ease-in-out infinite;
}

@keyframes mykoGlow {
  0% { box-shadow: 0 2px 12px rgba(102, 187, 106, 0.4); }
  100% { box-shadow: 0 4px 20px rgba(102, 187, 106, 0.6); }
}

@keyframes urgentPulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* Barre de disponibilit√© sur l'image */
.availability-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.3));
  padding: 1rem 0.8rem 0.8rem;
}

.availability-bar {
  position: relative;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 8px;
  height: 6px;
  overflow: hidden;
}

.availability-fill {
  height: 100%;
  transition: width 0.3s ease;
  border-radius: 8px;
}

.availability-bar.high .availability-fill {
  background: linear-gradient(90deg, #4caf50, #66bb6a);
}

.availability-bar.medium .availability-fill {
  background: linear-gradient(90deg, #ff9800, #ffb74d);
}

.availability-bar.low .availability-fill {
  background: linear-gradient(90deg, #f44336, #ef5350);
}

.availability-info {
  position: absolute;
  top: -24px;
  right: 0;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.availability-percent {
  color: white;
  font-size: 0.7rem;
  font-weight: 600;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
}

.myko-star {
  color: #ffd700;
  font-size: 0.8rem;
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  animation: starTwinkle 2s ease-in-out infinite;
}

@keyframes starTwinkle {
  0%, 100% { opacity: 0.8; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.1); }
}

/* Contenu de la carte */
.recipe-content {
  padding: 1.2rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recipe-header {
  margin-bottom: 0.8rem;
}

.recipe-title {
  color: #2e7d32;
  font-size: 1.1rem;
  font-weight: 600;
  margin: 0 0 0.4rem 0;
  line-height: 1.3;
}

.recipe-quick-meta {
  display: flex;
  gap: 1rem;
  margin-top: 0.4rem;
}

.meta-item {
  color: rgba(46, 125, 50, 0.8);
  font-size: 0.8rem;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.2rem;
}

.meta-item.time {
  color: rgba(255, 152, 0, 0.9);
}

.meta-item.servings {
  color: rgba(33, 150, 243, 0.9);
}

/* Description */
.recipe-description {
  color: rgba(46, 125, 50, 0.7);
  font-size: 0.85rem;
  line-height: 1.4;
  margin: 0.5rem 0;
  flex: 1;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* Statut des ingr√©dients */
.ingredients-status {
  margin: 0.8rem 0;
}

.ingredients-text {
  color: rgba(46, 125, 50, 0.8);
  font-size: 0.8rem;
  font-weight: 500;
}

/* Actions Myko */
.recipe-actions.myko-actions {
  display: flex;
  gap: 0.4rem;
  margin-top: auto;
  padding-top: 0.8rem;
  border-top: 1px solid rgba(255, 255, 255, 0.2);
  flex-wrap: wrap;
}

.action-btn {
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
  border-radius: 8px;
  padding: 0.5rem;
  color: rgba(46, 125, 50, 0.8);
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 0.9rem;
  min-width: 36px;
  height: 36px;
}

.action-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-2px);
}

.action-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.action-btn:disabled:hover {
  transform: none;
