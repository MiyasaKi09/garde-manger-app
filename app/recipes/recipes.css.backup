  .recipes-controls {
    margin-bottom: 2rem;
  }

  .search-filters {
    gap: 0.8rem;
  }

  .stats-inline {
    gap: 0.3rem;
  }

  .stat-item {
    min-width: 50px;
    padding: 0.5rem 0.6rem;
  }

  .sort-controls {
    gap: 0.3rem;
  }

  .sort-btn {
    font-size: 0.7rem;
    padding: 0.4rem 0.6rem;
  }
}

/* ========================================
   MODAL ET AUTRES COMPOSANTS
   ======================================== */

/* Modal overlay pour les d√©tails de recette */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(5px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 2rem;
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.5);
  max-width: 900px;
  max-height: 90vh;
  overflow-y: auto;
  box-shadow: 
    0 20px 60px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.6);
}

/* Styles conserv√©s pour la modal de recette */
.recipe-modal.myko-style {
  padding: 2rem;
}

.modal-header-myko {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 1rem;
}

.modal-close-btn {
  background: rgba(244, 67, 54, 0.1);
  border: 1px solid rgba(244, 67, 54, 0.3);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  cursor: pointer;
  font-size: 1.2rem;
  color: #d32f2f;
  transition: all 0.3s ease;
}

.modal-close-btn:hover {
  background: rgba(244, 67, 54, 0.2);
  transform: scale(1.1);
}

.recipe-hero-image {
  position: relative;
  height: 300px;
  border-radius: 16px;
  overflow: hidden;
  margin-bottom: 2rem;
}

.recipe-hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.recipe-placeholder-image {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(102, 187, 106, 0.1), rgba(67, 160, 71, 0.1));
}

.recipe-placeholder-image span {
  font-size: 4rem;
  margin-bottom: 1rem;
  opacity: 0.6;
}

.recipe-hero-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
  color: white;
  padding: 2rem;
}

.recipe-hero-overlay h1 {
  margin: 0 0 1rem 0;
  font-size: 2rem;
  font-weight: 700;
}

.recipe-badges {
  display: flex;
  gap: 0.5rem;
}

.recipe-quick-info {
  display: flex;
  gap: 2rem;
  margin-bottom: 2rem;
}

.quick-info-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  background: rgba(255, 255, 255, 0.1);
  padding: 1rem;
  border-radius: 12px;
  flex: 1;
}

.info-icon {
  font-size: 1.5rem;
}

.info-value {
  display: block;
  font-size: 1.2rem;
  font-weight: 600;
  color: #2e7d32;
}

.info-label {
  display: block;
  font-size: 0.8rem;
  color: rgba(46, 125, 50, 0.7);
}

.macros-section {
