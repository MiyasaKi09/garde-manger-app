.portions-selector {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin-bottom: 1.5rem;
  padding: 1rem;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
}

.portions-controls {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.portion-btn {
  background: rgba(102, 187, 106, 0.2);
  border: 1px solid rgba(102, 187, 106, 0.4);
  border-radius: 50%;
  width: 40px;
  height: 40px;
