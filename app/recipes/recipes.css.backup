}

.macro-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-size: 0.9rem;
}

.macro-color {
  width: 12px;
  height: 12px;
  border-radius: 2px;
}

.macro-color.proteins {
  background: #4caf50;
}

.macro-color.carbs {
  background: #ff9800;
}

.macro-color.fats {
  background: #2196f3;
}

